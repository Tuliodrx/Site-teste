  <h1>Ganhe Pontos Tocando!</h1>
  <div id="pontos">0</div>
  <button id="tocarBtn">Toque aqui!</button>

  <footer>Desenvolvido por VocÃª ðŸ’™</footer>

  <script>
    let pontos = 0;
    const pontosDiv = document.getElementById('pontos');
    const botao = document.getElementById('tocarBtn');

    // Toda vez que clicar/toque no botÃ£o, soma ponto!
    botao.addEventListener('click', function() {
      pontos++;
      pontosDiv.textContent = pontos;
    });

    // Suporte a toques diretos na tela (mobile)
    botao.addEventListener('touchstart', function(e) {
      e.preventDefault();
      pontos++;
      pontosDiv.textContent = pontos;
    });
  </script>

